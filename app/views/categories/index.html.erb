<div class="homepage">

<h1>Featured Products</h1>

<ul data-orbit>
  <% Product.featured_products.each do |product| %>
   <li><%= link_to image_tag(product.image_url), category_product_path(Category.find(product.category_id), product) %></li>
  <% end %>
</ul>

  <% @categories.each do |category| %>
   <h4>
    <%= link_to category.name, category_path(category) %>
  </h4>
</div>
      <div id="owl-example" class="owl-carousel">
        <% category.products.each do |product| %>
            <div class="product-image">
              <%= link_to image_tag(product.image_url), category_product_path(Category.find(product.category_id), product) %>
            </div>
        <% end %>
      </div>

  <% end %>



